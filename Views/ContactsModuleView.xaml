				VerticalAlignment="Top"
				Width="48"
				Height="48"
				Grid.RowSpan="2"
				Margin="4"
				x:Name="DeleteUser"
				Command="{Binding Delete}">
				<Button.Style>
					<Style
						BasedOn="{StaticResource ClearButtonOnWhite}"
						TargetType="Button">
						<Setter
							Property="Visibility"
							Value="Collapsed" />
