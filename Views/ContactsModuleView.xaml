		<TextBlock
			Grid.Column="1"
			Text="Contacts"
			FontSize="42pt"
			FontFamily="Segoe UI"
			FontWeight="Light"
			Margin="0,0,0,20" />

		<ContentControl
			Grid.Row="1"
			Grid.Column="1"
			x:Name="ActiveItem" />

