<UserControl
	x:Class="DonPavlik.Desktop.Contacts.Views.ContactsModuleView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	mc:Ignorable="d"
	d:DesignHeight="300"
	d:DesignWidth="300">
	<Grid
		Margin="0,10,0,0">
		<Grid.RowDefinitions>
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="*" />
			<RowDefinition
				Height="60" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="118" />
			<ColumnDefinition
				Width="*" />
		</Grid.ColumnDefinitions>

		<!--Region Back Navigation-->
		<Button
			VerticalAlignment="Top"
			Width="48"
			Height="48"
			Grid.RowSpan="2"
			Margin="0,50,0,0"
			x:Name="BackNavigationButton"
			Command="{Binding NavigateBack}">
			<Button.Style>
				<Style
					BasedOn="{StaticResource ClearButtonOnWhite}"
					TargetType="Button">
					<Setter
						Property="Visibility"
						Value="Collapsed" />
					<Style.Triggers>
						<Trigger
							Property="IsEnabled"
							Value="True">
							<Setter
								Property="Visibility"
								Value="Visible" />
						</Trigger>
					</Style.Triggers>
				</Style>
			</Button.Style>

			<Border
				Background="Transparent">
				<Viewbox
					xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
					<Path
						Data="M22.50126,13.762006C22.963479,13.761681 23.425373,13.937478 23.776918,14.289071 24.481308,14.997356 24.481308,16.140533 23.776918,16.843717L17.153306,23.468581 38.503224,23.468581C39.499408,23.468581 40.307998,24.275865 40.307998,25.275845 40.307998,26.267923 39.499408,27.080407 38.503224,27.080407L17.153306,27.080407 23.776918,33.702669C24.481308,34.405855 24.481308,35.554232 23.776918,36.257318 23.425523,36.608912 22.961928,36.786005 22.502235,36.786005 22.037342,36.786005 21.576447,36.608912 21.223652,36.257318L12.045374,27.080407 10.241998,25.275845 12.045374,23.468581 21.223652,14.291671C21.576497,13.938778,22.039041,13.762331,22.50126,13.762006z M25.273002,4C13.543001,4 4.0000005,13.541999 4,25.270997 4.0000005,37.001995 13.543001,46.543995 25.273002,46.543995 37.004003,46.543995 46.547002,37.001995 46.547002,25.270997 46.547002,13.541999 37.004003,4 25.273002,4z M25.273002,0C39.209002,0 50.547002,11.335999 50.547002,25.270997 50.547002,39.206995 39.209002,50.543995 25.273002,50.543995 11.338001,50.543995 0,39.206995 0,25.270997 0,11.335999 11.338001,0 25.273002,0z"
						Stretch="Uniform"
						Fill="{Binding ElementName=BackNavigationButton, Path=Foreground}"
						Width="48"
						Height="48"
						Margin="0,0,0,0" />
				</Viewbox>
			</Border>
		</Button>
		<!--EndRegion-->

		<TextBlock
			Grid.Column="1"
			Text="Contacts"
			FontSize="42pt"
			FontFamily="Segoe UI"
			FontWeight="Light"
			Margin="0,0,0,20" />

		<ContentControl
			Grid.Row="1"
			Grid.Column="1"
			x:Name="ActiveItem" />

		<StackPanel
			Grid.ColumnSpan="2"
			Orientation="Horizontal"
			Grid.Row="2"
			Margin="60,0,0,0">
			
			<Button
				VerticalAlignment="Top"
				Width="29"
				Height="48"
				Grid.RowSpan="2"
				Margin="8,4"
				x:Name="AddUser"
				Command="{Binding Add}">
				<Button.Style>
					<Style
						BasedOn="{StaticResource ClearButtonOnWhite}"
						TargetType="Button">
						<Setter
							Property="Visibility"
							Value="Collapsed" />
						<Style.Triggers>
							<Trigger
								Property="IsEnabled"
								Value="True">
								<Setter
									Property="Visibility"
									Value="Visible" />
							</Trigger>
						</Style.Triggers>
					</Style>
				</Button.Style>

				<Border
					Background="Transparent">
					<StackPanel
						Orientation="Vertical">
						<Viewbox
							xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
							<Path
								Data="M 35.7547,18.2107C 35.7547,27.9 27.9,35.7547 18.2106,35.7547C 8.5213,35.7547 0.666656,27.9 0.666656,18.2107C 0.666656,8.52133 8.5213,0.666672 18.2106,0.666672C 27.9,0.666672 35.7547,8.52133 35.7547,18.2107 Z M 18.211,28.2107L 18.211,8.21074M 8.211,18.2107L 28.211,18.2107"
								Stretch="Uniform"
								Stroke="{Binding ElementName=AddUser, Path=Foreground}"
								Width="29"
								Height="29"
								Margin="4" />
						</Viewbox>
						<TextBlock
							HorizontalAlignment="Center"
							Text="Add" />
					</StackPanel>
				</Border>
			</Button>
			
			<Button
				VerticalAlignment="Top"
				Width="32"
				Height="48"
				Grid.RowSpan="2"
				Margin="8,4"
				x:Name="EditUser"
				Command="{Binding Edit}">
				<Button.Style>
					<Style
						BasedOn="{StaticResource ClearButtonOnWhite}"
						TargetType="Button">
						<Setter
							Property="Visibility"
							Value="Collapsed" />
						<Style.Triggers>
							<Trigger
								Property="IsEnabled"
								Value="True">
								<Setter
									Property="Visibility"
									Value="Visible" />
							</Trigger>
						</Style.Triggers>
					</Style>
				</Button.Style>

				<Border
					Margin="4"
					Background="Transparent">
					<StackPanel
						Orientation="Vertical">
						<Border
							CornerRadius="18"
							BorderThickness="1"
							BorderBrush="{Binding ElementName=EditUser, Path=Foreground}"
							Width="24"
							Height="24"
							Margin="0,0,0,2">
							<Viewbox
								Width="12"
								Height="12"
								xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
								<Path
									Data="M 0.5,17L 2.80676,11.3594L 5.82294,14.4617L 0.5,17 Z M 11.2917,2.76561L 14.6979,6.17186L 16.9792,3.89061L 13.5886,0.499985L 11.2917,2.76561 Z M 7.82291,6.21092L 11.2291,9.61717L 13.5104,7.33592L 10.1198,3.9453L 7.82291,6.21092 Z M 5.52603,8.46095L 8.93228,11.8672L 11.2135,9.58592L 7.82294,6.19533L 5.52603,8.46095 Z M 4.13464,9.81691L 7.54105,13.223L 8.91144,11.8526L 5.52084,8.46199L 4.13464,9.81691 Z"
									Stretch="Uniform"
									Fill="{Binding ElementName=EditUser, Path=Foreground}" />
							</Viewbox>
						</Border>

						<TextBlock
							HorizontalAlignment="Center"
							Text="Edit" />
					</StackPanel>
				</Border>
			</Button>
		</StackPanel>
	</Grid>
</UserControl>
